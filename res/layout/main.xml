<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>


<Spinner
android:layout_alignParentLeft="true"
android:layout_height="wrap_content" android:id="@+id/update" android:layout_width="fill_parent" android:layout_toLeftOf="@+id/apply">
</Spinner><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Apply" android:id="@+id/apply" android:layout_alignParentRight="true">
</Button><TextView android:layout_alignParentLeft="true" android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/description" android:text="Desctiprion of update here" android:layout_below="@+id/update" android:padding="4sp">
</TextView>

</RelativeLayout>
